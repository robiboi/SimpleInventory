@{
    ViewData["Title"] = "Items";
}

<button type="button" class="btn btn-primary add-button" data-bs-toggle="modal" data-bs-target="#addItemModal">
    <i class="fas fa-plus"></i> Add Item
</button>

<div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addItemModalLabel">Add New Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addItemForm">
                    <div class="mb-3">
                        <label for="itemName" class="form-label">Item Name</label>
                        <input type="text" class="form-control" id="itemName" required>
                    </div>
                    <div class="mb-3">
                        <label for="itemDescription" class="form-label">Item Description</label>
                        <input type="text" class="form-control" id="itemDescription" required>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Save Item</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- DataTable -->
<div class="card mt-4">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">Items List</h5>
    </div>
    <div class="card-body">
        <table id="itemsTable" class="display text-center align-middle">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Item SKU</th>
            <th>Actions</th>
		</tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ItemSKU</td>
                <td>
                        <button class="btn btn-sm btn-warning px-4 py-1 edit-btn" data-id="@item.Id">
                        <i class="fas fa-edit"></i>
                    </button>
                        <button class="btn btn-sm btn-danger px-4 py-1 delete-btn" data-id="@item.Id">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                        <button class="btn btn-sm btn-primary px-4 py-1 borrow-btn" data-id="@item.Id">
                        <i class="fa-solid fa-hand-holding-hand"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
</div>


